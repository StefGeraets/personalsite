---
layout: page.njk
---

{% block content %}
  <h1>{{ title }}</h1>

  {% if date %}<p class="time"><time datetime="{{ date | dateymd }}">{{ date | datefriendly }}</time></p>{% endif %}

  <p class="words">{{ content | wordcount | readtime }} words</p>

  {{ content | safe }}

  {% set nextPost = collections.posts | getNextCollectionItem(page) %}
  {% if nextPost %}
    <p>Next article: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></p>
  {% endif %}

  {% set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {% if previousPost %}
    <p>Previous article: <a href="{{previousPost.url}}">{{ previousPost.data.title }}</a></p>
  {% endif %}

{% endblock %}