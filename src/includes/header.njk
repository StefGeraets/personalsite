<header class="header" role="banner">
  <div class="header__inner container">
    <div class="logo">
      <a href="/">
        <img src="/assets/images/logo.svg" class="logo-icon" inline/>
        <span class="sr-only">{{ author.name }}</span>
      </a>
    </div>
    <ul class="header__top contact__top">
      <li class="header__top-item">
        <a href="tel:{{author.phoneUrl}}">
          <svg class="icon contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
          <span>{{author.phone}}</span>
        </a>
      </li>
      <li class="header__top-item">
        <a href="mail:{{author.email}}">
          <svg class="icon mail-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
          <span>{{author.email}}</span>
        </a>
      </li>
    </ul>
  </div>
</header>